		{
			"name": "avid.ctms.registry -> getServiceRoots -> set assetById from globalId Copy",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"response is ok\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"",
							"pm.test(\"systems insterplay-pam there\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.systems).to.be.not.undefined;",
							"    pm.expect(jsonData.systems.filter(data => data.systemType == 'interplay-pam')[0].systemType).to.equal(\"interplay-pam\");",
							"    let pamSystem = jsonData.systems.filter(data => (data.systemType == 'interplay-pam' && !data.origin  ) )[0];",
							"    let systemID = pamSystem.systemID;",
							"    let systemName = pamSystem.name;",
							"    let systemAssetByIdHref = \"\";",
							"    console.log(\"Storing pam 'systemID' as 'interplay_pam_systemID': \" + systemID );",
							"",
							"    let assetById = jsonData[\"resources\"][\"aa:asset-by-id\"];",
							"    for (let i=0 ; i<assetById.length ; i++) {",
							"        if (assetById[i].systems[0].systemType == \"interplay-pam\" && assetById[i].systems[0].origin == undefined) {",
							"            systemAssetByIdHref = assetById[i].href;",
							"            systemAssetByIdHref = systemAssetByIdHref.replace(\"{id}\", pm.environment.get(\"globalId\"));",
							"        }",
							"    }",
							"",
							"    console.log(\"Storing pam aa:asset-by-id href as 'interplay_pam_systemAssetByIdHref': \" + systemAssetByIdHref );",
							"",
							"    pm.globals.set(\"interplay_pam_systemID\", systemID);",
							"    pm.globals.set(\"interplay_pam_host\", systemName);",
							"",
							"    pm.globals.set(\"interplay_pam_systemAssetByIdHref\", systemAssetByIdHref);",
							"",
							"    console.log(\"set mobId here for futher use...\");",
							"    //pm.globals.set(\"mobId\", \"060a2b340101010101010f0013-000000-0f280f004fcf00de-060e2b347f7f-d080\")",
							"",
							"});",
