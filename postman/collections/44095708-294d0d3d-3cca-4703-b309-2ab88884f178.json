		{
			"name": "avid.ctms.registry -> getServiceRoots -> set locItemById from global folderId",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "059e8293-dd8b-45be-a008-01416cd9e590",
						"exec": [
							"pm.test(\"response is ok\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"",
							"pm.test(\"systems avid-pmplus there\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.systems).to.be.not.undefined;",
							"    pm.expect(jsonData.systems.filter(data => data.systemType == 'avid-pmplus')[0].systemType).to.equal(\"avid-pmplus\");",
							"    let pmplusSystem = jsonData.systems.filter(data => (data.systemType == 'avid-pmplus' && data.origin  ) )[0];",
							"    let systemID = pmplusSystem.systemID;",
							"    let systemName = pmplusSystem.name;",
							"    let locItemByIdHref = \"\";",
							"    console.log(\"Storing pmplus 'systemID' as 'avid-pmplus_systemID': \" + systemID );",
							"",
							"    let itemById = jsonData[\"resources\"][\"loc:item-by-id\"];",
							"    for (let i=0 ; i<itemById.length ; i++) {",
							"        if (itemById[i].systems[0].systemType == \"avid-pmplus\") {",
							"            locItemByIdHref = itemById[i].href;",
							"            locItemByIdHref = locItemByIdHref.replace(\"{id}\", pm.environment.get(\"folderID\"));",
							"        }",
							"    }",
							"",
							"    console.log(\"Storing pmplus loc:item-by-id href as 'avid-pmplus_locItemByIdHref': \" + locItemByIdHref );",
							"",
							"    pm.globals.set(\"avid-pmplus_systemID\", systemID);",
							"    pm.globals.set(\"avid-pmplus_host\", systemName);",
							"",
							"    pm.globals.set(\"avid-pmplus_locItemByIdHref\", locItemByIdHref);",
							"",
							"    console.log(\"set mobId here for futher use...\");",
							"    //pm.globals.set(\"mobId\", \"060a2b340101010101010f0013-000000-0f280f004fcf00de-060e2b347f7f-d080\")",
							"",
							"});",
							"",
							"",
							"",
							"",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
